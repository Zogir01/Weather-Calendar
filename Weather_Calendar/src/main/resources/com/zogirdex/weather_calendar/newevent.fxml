<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zogirdex.weather_calendar.controller.NewEventController">
   <children>
      <VBox alignment="CENTER" prefHeight="380.0" prefWidth="303.0" spacing="15.0">
          <children>
            <Label alignment="CENTER" prefHeight="17.0" prefWidth="452.0" styleClass="heading-label" text="Dodaj nowe spotkanie" textAlignment="CENTER" />
            <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="25.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="148.0" text="Wpisz nazwę:" />
                  <TextField fx:id="textFieldEventName" prefHeight="25.0" prefWidth="248.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="25.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="112.0" text="Wybierz lokalizację:" />
                  <ComboBox fx:id="comboBoxLocation" prefHeight="25.0" prefWidth="143.0" />
               </children>
            </HBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Wpisz opis:" />
                  <TextArea fx:id="textAreaEventDesc" prefHeight="217.0" prefWidth="455.0" />
               </children>
            </VBox>
            <Button fx:id="buttonSave" mnemonicParsing="false" onAction="#saveData" prefHeight="25.0" prefWidth="263.0" text="Dodaj spotkanie" />
          </children>
          <padding>
              <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
          </padding>
      </VBox>
   </children>
</AnchorPane>
